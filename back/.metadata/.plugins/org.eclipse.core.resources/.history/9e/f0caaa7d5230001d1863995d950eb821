package br.com.caio.todo.tasks.bo;

import java.util.List;

import javax.persistence.EntityManager;
import javax.persistence.PersistenceContext;
import javax.persistence.Query;

import org.springframework.stereotype.Repository;

import br.com.caio.todo.tasks.vo.TasksVO;

@Repository
public class TaskBO {
	
	@PersistenceContext
	private EntityManager entityManager;

	public List<TasksVO> loadTasks(Integer userId) {
		Query qr = this.entityManager.createNamedQuery(null);
		qr.setParameter("userId", userId);
		
		@SuppressWarnings("unchecked")
		List<TasksVO> result = qr.getResultList();
		
		return result;
	}

}
